{
    "cluster" : {
        "cluster_name"    : "betaweb",
        "host"            : "betaweb015.medien.uni-weimar.de",
        "port"            : 9300,
        "indices"         : [ "webis_clueweb09", "webis_clueweb12" ],
        "default_indices" : [ "webis_clueweb12" ]
    },

    "hdfs" : {
        "defaultFS" : "hdfs://betaweb020:8020"
    },

    "mapfiles" : {
        "webis_clueweb12" : {
            "path" : "/corpora/clueweb/12-mapfile",
            "partitions" : 100,
            "prefix" : "clueweb12"
        },
        "webis_clueweb09" : {
            "path" : "/corpora/clueweb/09-mapfile",
            "partitions" : 200,
            "prefix" : "clueweb09"
        }
    },

    "serp" : {
        "pagination" : {
            "results_per_page" : 10
        },
        "snippet_length" : 300,
        "title_length" : 70
    },

    "search" : {
        "default_simple" : {
            "main_fields" : [
                { "name" : "title_lang.en",            "boost" : 30.0 },
                {
                    "name" : "body_lang.en",
                    "boost" : 30.0,
                    "proximity_matching" : true,
                    "proximity_slop" : 4,
                    "proximity_boost" : 4000.0,
                    "proximity_cutoff_frequency" : 0.001
                },
                { "name" : "full_body_lang.en" },
                { "name" : "headings_lang.en",         "boost" : 50.0 },
                { "name" : "meta_desc_lang.en",        "boost" : 20.0 },
                { "name" : "meta_keywords_lang.en",    "boost" : 10.0 },
                { "name" : "warc_target_hostname",     "boost" : 400.0 },
                { "name" : "warc_target_path",         "boost" : 50.0 },
                { "name" : "warc_target_hostname.raw", "boost" : 50000.0 }
            ],
            "additional_fields" : [
                { "name" : "warc_trec_id", "boost" : 100000.0 }
            ],
            "query_filters" : [
                { "keyword" : "site", "field": "warc_target_hostname.raw" },
                { "keyword" : "lang", "field": "lang" },
                { "keyword" : "index", "field": "#index" }
            ],
            "tie_breaker" : 0.7,
            "function_scores" : {
                "score_mode" : "multiply",
                "boost_mode" : "multiply",

                "scoring_fields": [
                    { "name" : "page_rank", "modifier" : "log1p", "factor" : 20.0 }
                ]
            },
            "range_filters" : [
                { "name" : "body_length", "gte" : 1000.0 },
                { "name" : "spam_rank", "gt" : 0.0, "lte": 80.0, "negate" : true }
            ],
            "node_limit" : 20000,
            "rescore_window" : 200,
            "prequery_cutoff_frequency": 0.001
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    {{> bootstrap-head}}
    {{> chatnoir2-head}}
    <link href="{{contextPath}}/static/css/prism.min.css" rel="stylesheet">
</head>
<body class="search-page">
    <div id="Main" class="container">
        <div id="SearchHeader" class="row">
            <div id="Logo" class="col-sm-2">
                <a rel="home" href="{{contextPath}}/" title="ChatNoir 2">
                    <img src="{{contextPath}}/static/img/chatnoir-logo.png" alt="ChatNoir Logo">
                </a>
            </div>
            <div class="col-sm-8" id="SearchField">
                <form role="search" action="{{contextPath}}/" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control input-lg" placeholder="Search" name="q" value="{{searchQuery}}" id="SearchInput">
                        {{#indicesString}}<input type="hidden" name="index" value="{{.}}">{{/indicesString}}
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary input-lg">Go!</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>

        {{^isIndex}}
        <section>
            <div class="back-to-index"><a href="{{contextPath}}/doc">Â« Back to documentation index</a></div>
        </section>
        {{/isIndex}}

        <section id="DocContent">
            {{& content}}
        </section>
    </div>

    {{> chatnoir2-page-foot}}

    {{> jquery-foot}}
    {{> bootstrap-foot}}
    <script src="{{contextPath}}/static/js/prism.min.js"></script>
    <script>
        $("pre > code").each(function() {
            var el = $(this);
            el.html(Prism.highlight(el.text(), Prism.languages.json));
            el.html(el.html().replace(/^(GET|POST) (.+)\n/,
                    '<div class="request"><span class="request-method">$1</span> <span class="request-uri">$2</span></div>'));
        });
    </script>
</body>
</html>

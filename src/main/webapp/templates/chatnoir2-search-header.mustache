            </a>
        </div>
        <div class="col-sm-8">
            {{> chatnoir2-search-field }}
        </div>
        <div id="SearchOptionsToggle">
            <button class="btn fa fa-cog active">Options</button>
        </div>
    </div>
    <div id="SearchOptions">
        <div class="indices">
            <select data-placeholder="Selectâ€¦" name="index" id="SearchIndices"multiple>
                {{#allowedIndices}}
